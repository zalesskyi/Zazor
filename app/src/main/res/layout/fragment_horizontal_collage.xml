<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clCollagePreview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/flFirst"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/flSecond"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivFirst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:rotation="90"
            android:scaleType="centerInside"
            android:scaleX="3.3"
            android:scaleY="3.3"
            android:adjustViewBounds="true"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivMakeFirst"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            android:layout_height="wrap_content"
            android:background="@color/black" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/flSecond"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/flFirst"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivSecond"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@color/black"
            android:rotation="90"
            android:scaleType="centerInside"
            android:scaleX="3.3"
            android:scaleY="3.3"/>

        <ImageView
            android:id="@+id/ivMakeSecond"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            android:layout_height="wrap_content"
            android:background="@color/black" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>